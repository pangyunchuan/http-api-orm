{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "./types",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "root/*": [
        "*"
      ],
      "layer-app/*": [
        "*"
      ],
      "layer-app": [
        "./lib/index.ts"
      ]
    }
  },
  "include": [
    "lib/**/*.ts"
  ]
}
